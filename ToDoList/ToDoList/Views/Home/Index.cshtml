@model ToDoList.Models.ViewModels.TodoViewModel
<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <table class="table">
            <thead>
            <tr class="table-primary">
                <th scope="col">Id</th>
                <th scope="col">Task</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var todo in Model.TodoList)
            {
                <tr>
                    <td class="todos-column" scope="row">@todo.Id</td>
                    <td class="todos-column">@todo.TaskName</td>
                    <td class="buttons-column">
                        <input type="submit" class="btn btn-danger" value="Delete" onclick="deleteTodo(@todo.Id)"/>
                        <input type="submit" value="Update" class="btn btn-primary" onclick="populateForm(@todo.Id)"/>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

