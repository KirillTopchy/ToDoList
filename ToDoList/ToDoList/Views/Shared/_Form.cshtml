@model TodoViewModel

<form asp-action="Insert" id="form-action" method="post" role="form">
    <div asp-validation-summary="All"></div>
    <label asp-for="Todo.TaskName"></label>
    <input asp-for="Todo.Id" type="hidden" />
    <input asp-for="Todo.TaskName" />
    <span asp-validation-for="Todo.TaskName"></span>
    <input type="submit" id="form-button" value="Add Todo"/>
</form>
